{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist", //compiled typescript files go there
    "rootDir": "./src", //where typescript files are (my code)
    "strict": true, //strict rule for types you have to specify type when initializing a variable
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true //Upper and lowercases have to match in file names
  },
  "include": ["src/**/*"], // compile all
  "exclude": ["node_modules"] // do not compile node_modules (node_modules are additional tools to node.js)
}
